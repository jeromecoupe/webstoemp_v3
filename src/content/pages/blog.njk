---
pagination: 
  data: collections.blogposts
  size: 12
  alias: blogposts
permalink: /blog/{% if pagination.pageNumber > 0 %}page{{ pagination.pageNumber + 1 }}/{% endif %}index.html
---

{% extends "layouts/base.njk" %}

{% from "components/blogcard.njk" import blogcard %}

{% set metaTitle = "Blog" %}
{% set metaDescription = "Blogposts, thoughts and ramblings by Jérôme Coupé." %}
{% set currentSection = "blog" %}

{% set colorTheme = "yellow" %}

{% block content %}

  <div class="c-section">
    <div class="l-container">

      <div class="c-section__block">
        <p class="c-suptitle">Infrequent ramblings</p>
        <h1 class="c-h1 u-mbe-none">Blogposts</h1>
      </div>

      <div class="c-section__block">
        <ul class="c-tabs">
          <li class="c-tabs__item">
            <a class="c-tabs__link" 
               href="#">
              List view
            </a>
          </li>
          <li class="c-tabs__item">
            <a class="c-tabs__link" 
               href="#">
              RSS feed
            </a>
          </li>
        </ul>
        {% for item in blogposts %}
          {% if loop.first %}<ul class="l-grid l-grid--2cols@small l-grid--3cols@medium  l-grid--4cols@large">{% endif %}
            <li>
              {{ blogcard({
                title: item.data.title,
                url: item.url,
                image: item.data.image,
                date: item.date
              }) }}
            </li>
          {% if loop.last %}</ul>{% endif %}
        {% endfor %}
        {% include "components/pagination.njk" %}
      </div>

    </div>
  </div>
  
{% endblock %}